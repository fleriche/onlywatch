<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <stroke
        android:width="3dip"
        android:color="@color/colorAccent"/>
    <corners
        android:bottomLeftRadius="60dp"
        android:bottomRightRadius="0dp"
        android:topLeftRadius="0dp"
        android:topRightRadius="60dp" />
    <padding
        android:bottom="20dp"
        android:left="20dp"
        android:right="10dp"
        android:top="10dp" />
    <gradient
        android:angle="0"
        android:centerX="0.5"
        android:centerY="0.5"
        android:startColor="@color/blueOverwatch"
        android:centerColor="@color/blueTransparentOverwatch"
        android:endColor="@color/blueOverwatch"
        android:type="linear"/>
</shape>

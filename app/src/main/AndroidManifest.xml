<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.onlywatch.fleriche.onlywatch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".general.HomeActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".general.ConsultActivity" />
        <activity android:name=".heroes.HeroesFilterActivity" />
        <activity android:name=".settings.SettingsActivity" />
        <activity android:name=".settings.HelpActivity" />
        <activity android:name=".maps.MapsFilterActivity" />
    </application>

</manifest>